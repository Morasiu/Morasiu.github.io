@using Portfolio.Services
<Row Margin="Margin.Is4.FromTop">
    <Column ColumnSize="ColumnSize.Is1.OnDesktop.IsAuto.OnMobile"></Column>
    <Column ColumnSize="ColumnSize.IsFull.OnMobile.Is3.OnDesktop">
        <Row Class="align-items-center">
            <Column>
                <Tooltip Text="@AchievementName">
                    <img src="@ImagePath" alt="@($"{AchievementName} logo")" id="logo"/>
                </Tooltip>
            </Column>
        </Row>

    </Column>
    <Column ColumnSize="ColumnSize.IsFull.OnMobile.Is4.OnDesktop" Class="align-self-center">
        <Heading Size="HeadingSize.Is4" Alignment="TextAlignment.Center">@Title</Heading>
    </Column>
    <Column ColumnSize="ColumnSize.IsFull.OnMobile.IsAuto.OnDesktop" Class="align-self-center">
        <Text Alignment="TextAlignment.Center">
            @(AchievementDate.ToString("dd.MM.yyyy"))
        </Text>
    </Column>
    <Column ColumnSize="ColumnSize.Is2.OnDesktop"/>
</Row>
<Row Margin="Margin.Is3.FromTop">
    <Column ColumnSize="ColumnSize.Is2.OnDesktop"/>
    <Column >
        <Paragraph Alignment="TextAlignment.Justified">
            @Description
        </Paragraph>
    </Column>
    <Column ColumnSize="ColumnSize.Is2.OnDesktop"/>
</Row>

@code {

    [Parameter]
    public string AchievementName { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public DateTime AchievementDate { get; set; }

    [Parameter]
    public string Description { get; set; }

    private string ImagePath => EventImageService.Images[AchievementName];
}