@using Portfolio.Services
@namespace Portfolio.Components.Skills

<Row Class="text-center">
    <Column ColumnSize="ColumnSize.Is3.OnDesktop"></Column>
    <Column ColumnSize="ColumnSize.IsAuto">
        <object data="@IconPath" type="image/svg+xml" class="skill_icon"></object>
    </Column>
    <Column ColumnSize="ColumnSize.Is4.OnDesktop.Is5.OnMobile">
        <Text Alignment="TextAlignment.Left">
            @Name
        </Text>
    </Column>
    <Tooltip Text="1 = just started, 5 = fully mastered">
        <Column Float="Float.Right" ColumnSize="ColumnSize.IsAuto.OnDesktop.IsAuto.OnMobile">
            <Text Alignment="TextAlignment.Right">
                @for (int i = 0; i < (int) Level; i++) {
                    <i class="fas fa-circle"></i>
                }
                @for (int i = 0; i < 5 - (int) Level; i++) {
                    <i class="far fa-circle"></i>
                }
            </Text>
        </Column>
    </Tooltip>
</Row>

@code {

    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public SkillLevel Level { get; set; } = SkillLevel.One;

    private string IconPath => SkillIconSerivce.IconsPath[Name];
}