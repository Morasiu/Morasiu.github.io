@using Portfolio.Pages
<Bar
    Breakpoint="Breakpoint.Desktop"
    Background="Background.Dark"
    ThemeContrast="ThemeContrast.Dark"
    Visible="_shouldBeVisible">
    <BarBrand>
        <BarItem>
            <BarLink To="">
                Hubert Morawski
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarToggler />
    <BarMenu >
        <BarStart >
            <BarItem >
                <BarDropdown>
                    <BarDropdownToggle>
                        <i class="fas fa-laptop-code"></i> Projects
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem Clicked="CloseBar">
                            <BarLink Class="text-dark" To="Projects/Web"><i class="fas fa-window-restore"></i> Web</BarLink>
                        </BarDropdownItem>
                        <BarDropdownItem Clicked="CloseBar">
                            <BarLink Class="text-dark" To="Projects/Web"><i class="fas fa-gamepad"></i> Games</BarLink>
                        </BarDropdownItem>
                        <BarDropdownItem Clicked="CloseBar">
                            <BarLink Class="text-dark" To="Projects/Mobile"><i class="fas fa-mobile"></i> Mobile</BarLink>
                        </BarDropdownItem>
                        <BarDropdownItem Clicked="CloseBar">
                            <BarLink Class="text-dark" To="Projects/Other"><i class="fas fa-flask"></i> Others</BarLink>
                        </BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
            <BarItem>
                <BarLink Clicked="CloseBar" To="@nameof(MyTimeline)"><i class="fas fa-stream"></i> Timeline</BarLink>
            </BarItem>
            <BarItem>
                <BarLink Clicked="CloseBar" To="@(nameof(AboutMe))"><i class="far fa-user"></i> About Me</BarLink>
            </BarItem>
        </BarStart>
    </BarMenu>
</Bar>

@code {
    private bool _shouldBeVisible;

    private void CloseBar() {
        _shouldBeVisible = false;
    }
}